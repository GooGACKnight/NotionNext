{
  // 编译器选项
  "compilerOptions": {
    // 设置模块解析的基础目录
    "baseUrl": ".",

    // 定义路径别名，简化模块导入路径
    "paths": {
      "@/blog.config": ["./blog.config"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/themes/*": ["themes/*"],
      "@/pages/*": ["pages/*"],
      "@/data/*": ["data/*"],
      "@/lib/*": ["lib/*"],
      "@/styles/*": ["styles/*"]
    },

    // 指定需要包含的库文件
    "lib": ["dom", "dom.iterable", "esnext"],

    // 允许编译 .js 文件
    "allowJs": true,

    // 跳过对第三方库类型声明文件的检查，提升编译速度
    "skipLibCheck": true,

    // 启用所有严格类型检查选项
    "strict": true,

    // 禁用生成输出文件（仅用于类型检查）
    "noEmit": true,

    // 启用增量编译模式，加快后续编译速度
    "incremental": true,

    // 指定模块系统的类型
    "module": "esnext",

    // 启用与 CommonJS 模块的互操作性
    "esModuleInterop": true,

    // 指定模块解析策略
    "moduleResolution": "node",

    // 允许导入 JSON 文件
    "resolveJsonModule": true,

    // 启用隔离模块模式，确保每个文件都是一个独立的模块
    "isolatedModules": true,

    // 指定 JSX 的处理方式
    "jsx": "preserve"
  },

  // 指定需要包含在编译中的文件或目录
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    ".eslintrc.js"
  ],

  // 指定需要排除的文件或目录
  "exclude": ["node_modules"]
}
